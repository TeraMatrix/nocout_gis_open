## /etc/default/celerybeat

# Absolute or relative path to the 'celery' command:
CELERY_BIN="/apps/nocout/nout/bin/celery"
#CELERY_BIN="/virtualenvs/def/bin/celery"

# App instance to use
# comment out this line if you don't use an app
# CELERY_APP="proj"
# or fully qualified:
#CELERY_APP="proj.tasks:app"

# Where to chdir at start.
# CELERYBEAT_CHDIR="/opt/Myproject/"
CELERYBEAT_CHDIR="/apps/nocout/nocout/nocout/"

# Extra arguments to celerybeat
CELERYBEAT_OPTS="--schedule=/apps/nocout/nocout/nocout/nocout/celerybeat-schedule"

export DJANGO_SETTINGS_MODULE="nocout.settings"

# Full path to the celeryd log file. Default is /var/log/celeryd.log
CELERYBEAT_LOG_FILE="/apps/nocout/tmp/celery/celerybeat.log"

# Full path to the PID file. Default is /var/run/celeryd.pid.
CELERYBEAT_PID_FILE="/apps/nocout/tmp/celery/celerybeat.pid"

# User to run beat as. Default is current user.
# Group to run beat as. Default is current user.
CELERYBEAT_USER="celery"
CELERYBEAT_GROUP="celery"

# Log level to use for celeryd. Default is INFO.
CELERYD_LOG_LEVEL="INFO"

# Always create directories (log directory and pid file directory).
# Default is to only create directories when no custom logfile/pidfile set.
CELERY_CREATE_DIRS=1
