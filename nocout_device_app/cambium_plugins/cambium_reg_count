#!/usr/bin/python
# -*- encoding: utf-8; py-indent-offset: 4 -*-

def check_cambium_reg_count_arguments(params):
    description, settings = params
    args =''
    if "socket_address" in settings:
        args += '%s ' % quote_shell_string(settings['socket_address'])
    if "socket_port" in settings:
        args += '%d ' % int(settings['socket_port'])

    if "mac" in settings:
        args += '%s ' % quote_shell_string(settings['mac'])
    if "reg_count_warning" in settings:
        args += '%d ' % int(settings['reg_count_warning'])

    if "reg_count_critical" in settings:
        args += '%d ' % int(settings['reg_count_critical'])


    return args

active_check_info['cambium_reg_count'] = {
    "command_line"        : '$USER1$/check_cambium_reg_count $ARG1$',
    "argument_function"   : check_cambium_reg_count_arguments,
    "service_description" : lambda params: "%s" % params[0],
    "has_perfdata"        :True,
}

