#!/usr/bin/python

import sys
from telnetlib import Telnet
import socket
import json
import os
import binascii
import mysql.connector
"""
operating Frequency of ss device  Poller script.

This is part of device application. 
Poller script determines the operating ptx of device. 
poller script takes the snmp value of OID .1.3.6.1.4.1.161.19.3.1.1.2.0 from snmp agent of device at specific interval.
Device on which Frequency operating is sent to device application 

"""
# ######################################################################
# Function: check_wimax_dl_modulation_change_invent
#
# Parameters: info (SNMP Ouput) _no_params (No Parameters)
#
# Output: service state ,plugin output
# ######################################################################



try:
    import nocout_settings
    from nocout_settings import _DATABASES, _LIVESTATUS
except Exception as exp:
    print exp



def mysql_conn():
        db = None
        try:
            db = mysql.connector.connect(
                        user=_DATABASES['user'],
                        host=_DATABASES['host'],
                        password=_DATABASES['password'],
                        database=_DATABASES['database'],
                        port=_DATABASES['port']
                        )
        except Exception as exp:
            print exp
        return db


def extract_hostip_from_wimax_topology(ss_host_mac):
        query = """
        select connected_device_ip from performance_topology where connected_device_mac ='%s' """ %(ss_host_mac)
        db = mysql_conn()
        cur = db.cursor()
        cur.execute(query)
        data = cur.fetchall()
        cur.close()

        return data


def connection_telnet_dl_mod_change(hostip, port):
        """
        Connects to a socket, checks for the WELCOME-MSG and closes the
        connection.
        Returns nothing.
    
        """
        try:
        	dl_modulation_change= None
                tn = Telnet(hostip,port,timeout=3)
        except socket.timeout:
		dl_modulation_change = None
		return dl_modulation_change
	tn.read_until("Login:")
        tn.write("admin" + "\r\n")
        tn.read_until("Password:")
        tn.write("admin" + "\r\n")
        tn.write("show cinr-distribution\r\n")
        tn.write("exit\r\n")
        data = tn.read_all()
	dl_modulation_change = None

        try:
                for i,row in enumerate(data.split("\n")):
                        if "downlink modulation changed:" in row:
                                dl_modulation_change = int(row.split(':')[1])
                                break
        except:
		dl_modulation_change = None
	return dl_modulation_change
                                

def check_wimax_dl_modulation_change_invent(item, params, info):
    """
            check_wimax_dl_modulation_change_invent function calcdlates the operating ptx

            Args:
                    item (str) Specific item on SNMP output on which we want to filter resdlts

            Kwargs:
                    params (tuple) Check parameters for critical and warning state of service

            Returns:
                    state (int) :
                                    0 : OK
                                    1 : Warning
                                    2: Critical
                3: unknown
                    infotext(string):
                                    plugin output
                                    Example : OK - 5835

                    Raises:
                            ValueError ,Exception
"""
    state = 3
    infotext = "unknown_value"
    dl_modulation_change= None
    warn ,crit =params
    try:
	if info[1]:
                ss_mac = info[1][0]
		a=binascii.b2a_hex(ss_mac)
		n = 2
		ss_mac=(':').join([a[i:i+2] for i in range(0, len(a), n)])
                if ss_mac:
			host_ip = extract_hostip_from_wimax_topology(ss_mac)
			if host_ip[0][0]:
                		dl_modulation_change =connection_telnet_dl_mod_change(host_ip[0][0], 23)
				if dl_modulation_change:
                                        if int(dl_modulation_change) > crit:
                                                state = 2
                                        elif int(dl_modulation_change) >= warn:
                                                state =1
                                        else:
                                                state =0

					infotext = "%s" % dl_modulation_change
    except ValueError:
        infotext = "type_mismatch_value"
    except:
        infotext = "unknown_value"

    return (state, infotext)


check_info["wimax_dl_modulation_change_invent"] = {
    'check_function': check_wimax_dl_modulation_change_invent,
    'service_description': 'wimax_dl_modulation_change_invent',
}

#########################################################################
#	SNMP OID for the operating ptx
#########################################################################
snmp_info["wimax_dl_modulation_change_invent"] = ( ".1.3.6.1.2.1.10.184.1.3.1.1.1", ["17.1"] )
